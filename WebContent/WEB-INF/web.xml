<?xml version="1.0" encoding="UTF-8"?>
<web-app 
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0">
	<servlet>
		<servlet-name>Heure_Date</servlet-name>
		<servlet-class>Exercices.Exo1.Heure_Date</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Heure_Date</servlet-name>
		<url-pattern>/affichage</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>Choix_Article</servlet-name>
		<servlet-class>Exercices.Exo2.ChoixArticle</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Choix_Article</servlet-name>
		<url-pattern>/choix</url-pattern>
	</servlet-mapping>
	
	
